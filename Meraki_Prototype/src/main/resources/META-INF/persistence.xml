<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="persistenciaMeraki" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <!-- Entidades de Meraki -->
    <class>Mx.Edu.Uaz.IngSoft.PooII.Modelo.Entidades.Producto</class>
    <class>Mx.Edu.Uaz.IngSoft.PooII.Modelo.Entidades.Cliente</class>
    <class>Mx.Edu.Uaz.IngSoft.PooII.Modelo.Entidades.Venta</class>
    <class>Mx.Edu.Uaz.IngSoft.PooII.Modelo.Entidades.ItemVenta</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:sqlite:Mercancia.db"/>
      <!--
      <property name="javax.persistence.jdbc.user" value="Ako"/>
      <property name="javax.persistence.jdbc.password" value="kadrianmiku01"/>
      -->
      <property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
      <property name="javax.persistence.schema-generation.database.action" value="none"/>
      <!-- https://wiki.eclipse.org/EclipseLink/Examples/JPA/Logging -->
      <property name="eclipselink.logging.level.sql" value="FINE"/>
      <property name="eclipselink.logging.parameters" value="true"/>
      <!-- https://www.eclipse.org/eclipselink/documentation/2.5/jpa/extensions/p_target_database.htm -->
      <property name="eclipselink.target-database" value="Database"/>
    </properties>
  </persistence-unit>
</persistence>
